rules_version = '2';

// This applies the rules to any database in your project.
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes unless explicitly allowed.
    // This is a security best practice.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users (admins) to read and write to the 'students' collection.
    // This is necessary for the Student Management page to function.
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users (admins) to READ the metrics document for the dashboard.
    // Write access is denied from the client-side to ensure data integrity; only the
    // backend cloud function can write to it.
    match /metrics/dashboard {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
