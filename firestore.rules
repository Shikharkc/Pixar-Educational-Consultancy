rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user has a specific role
    function isRole(role) {
      return exists(/databases/$(database)/documents/counselors/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/counselors/$(request.auth.uid)).data.role == role;
    }

    // Helper function to get the name of the logged-in counselor
    function getCounselorName() {
      return get(/databases/$(database)/documents/counselors/$(request.auth.uid)).data.name;
    }

    // Rules for the 'students' collection
    match /students/{studentId} {
      // Admins can read, write, create, and delete any student document.
      allow read, write: if isRole('admin');
      
      // Counselors can read a specific student document ONLY if it's assigned to them.
      allow get: if isRole('counselor') && resource.data.assignedTo == getCounselorName();
      
      // Counselors can list students ONLY if the query filters by their name.
      // This is the crucial rule for the counselor dashboard query.
      allow list: if isRole('counselor') && request.query.where.assignedTo == getCounselorName();
    }

    // Rules for the 'counselors' collection (Admin only access)
    match /counselors/{counselorId} {
      allow read, write: if isRole('admin');
    }

    // Rules for other collections (e.g., display, metrics)
    // Allow read for authenticated users, write only for admins.
    match /{collection}/{docId} {
        allow read: if request.auth != null;
        allow write: if isRole('admin');
    }
  }
}
