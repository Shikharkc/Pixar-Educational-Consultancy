
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read their own counselor profile
    match /counselors/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
    }

    // Rules for the 'students' collection
    match /students/{studentId} {
      // ADMINS: Admins can read and write any student document.
      // This rule checks if the logged-in user's document in the 'counselors' collection has the role 'admin'.
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/counselors/$(request.auth.uid)).data.role == 'admin';

      // COUNSELORS: Counselors can only update student documents.
      // This rule checks if the logged-in user's role is 'counselor'.
      allow update: if request.auth != null && get(/databases/$(database)/documents/counselors/$(request.auth.uid)).data.role == 'counselor';
    }
    
    // LIST RULE FOR COUNSELORS: This is the most important rule to fix the error.
    // It allows a user to perform a LIST (query) operation on the 'students' collection
    // ONLY IF the query includes a 'where' clause that filters for students
    // assigned to that counselor's name.
    match /students/{studentId} {
        allow list: if request.auth != null &&
                     request.auth.token.name == request.query.filters[0].value &&
                     get(/databases/$(database)/documents/counselors/$(request.auth.uid)).data.role == 'counselor';
    }
  }
}
