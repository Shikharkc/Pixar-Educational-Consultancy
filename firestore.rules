rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Public Access Rules ---
    // Allow anyone to create a new student document via the contact form.
    // They cannot read, update, or delete any student data.
    match /students/{studentId} {
      allow create: if true; // Allows public form submission
      allow read, update, delete: if request.auth != null; // Only admins can manage
    }

    // --- Admin Access Rules ---
    // Admins can read the metrics document for the dashboard.
    match /metrics/dashboard {
      allow read: if request.auth != null;
      allow write: if false; // Only cloud functions can write to metrics
    }
  }
}
